<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sstto.sos.MainActivity">

    <RelativeLayout
        android:id="@+id/layout_photo_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15sp"
        tools:layout_editor_absoluteX="0sp"
        tools:layout_editor_absoluteY="16sp">

        <ImageView
            android:id="@+id/logoView"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            app:srcCompat="@drawable/safety"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/alert_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoView"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/background"
            android:layout_marginTop="10sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/safty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alert_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Safety Instructions"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/safty_text"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Safe Place Nearby"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/safeZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:gravity="center" />

        <Button
            android:id="@+id/safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/safeZone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:text="I AM SAFE" />

        <Button
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/safty_text"
            android:layout_toRightOf="@+id/safty_text"
            android:text="Edit Profile" />

        <Button
            android:id="@+id/appinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/safty_text"
            android:layout_toStartOf="@+id/safty_text"
            android:text="App Info" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
